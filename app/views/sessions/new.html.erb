<div id="Sign-in-display" class="rounded-10">
<h2>Sign In</h2>
<% form_for(:session , :url=>sessions_path) do |f|%>
<br></br>
<div class="field">
  <h3><%=f.label :email%><br></h3>
  <%=f.text_field :email%>
</div>
<br></br>
<div>
  <h3><%=f.label :password%><br></h3>
  <%=f.password_field :password%>
</div>
<br></br>
<div class="actions">
  <%=f.submit "Sign in"%>
</div>
<%end%>

<h4><p>New user? <%= link_to "Register now!", signup_path %></p></h4>

